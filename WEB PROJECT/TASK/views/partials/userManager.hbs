{{#if (eq user.role "admin")}}
<div class="grid2">
  <div>
    <h3>Create user</h3>
    <form method="POST" action="/users" class="row">
      <input type="email" name="email" placeholder="email" required>
      <input type="password" name="password" placeholder="password" required>
      <select name="role"><option>user</option><option>admin</option></select>
      <button>Create</button>
    </form>
  </div>
  <div>
    <h3>All users</h3>
    <ul class="plain">
      {{#each users}}
        <li class="row wrap">
          <form method="POST" action="/users/{{this.id}}" class="row">
            <input type="email" name="email" value="{{this.email}}" required>
            <input type="password" name="password" placeholder="(leave blank to keep)">
            <select name="role">
              <option value="user" {{#if (eq this.role "user")}}selected{{/if}}>user</option>
              <option value="admin" {{#if (eq this.role "admin")}}selected{{/if}}>admin</option>
            </select>
            <button>Update</button>
          </form>
          <form method="POST" action="/users/{{this.id}}/delete">
            <button class="danger">Delete</button>
          </form>
        </li>
      {{/each}}
    </ul>
  </div>
</div>
{{else}}
<p class="muted">Admin only.</p>
{{/if}}