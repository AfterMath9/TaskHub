{{! code generated by ---ChatGPT--- }}
<nav class="auth-bar">
  {{#if user}}
    <div class="auth-summary">
      <span class="dot online" aria-hidden="true"></span>
      <span class="auth-label">Signed in as <strong>{{user.display_name}}</strong></span>
      <span class="auth-role">Role: {{user.role}}</span>
    </div>
    <form method="POST" action="/auth/logout" class="logout-form">
      <button type="submit" class="ghost">Logout</button>
    </form>
  {{else}}
    <form method="POST" action="/auth/login" class="auth-form">
      <label>
        <span class="sr-only">Email or username</span>
        <input type="text" name="email" placeholder="Email or admin" required autocomplete="username" spellcheck="false">
      </label>
      <label>
        <span class="sr-only">Password</span>
        <input type="password" name="password" placeholder="Password" required>
      </label>
      <button type="submit" class="primary">Login</button>
    </form>
  {{/if}}
</nav>
