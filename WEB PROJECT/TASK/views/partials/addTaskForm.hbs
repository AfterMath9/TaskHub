{{! code generated by ---ChatGPT--- }}
{{#if user}}
<section class="card task-form-card">
  <header class="card-head">
    <div>
      <h3>Create a new task</h3>
      <p class="card-subtitle">Capture a title, enrich it with detail, and choose a category.</p>
    </div>
  </header>
  <form method="POST" action="/tasks" class="task-form">
    <input type="hidden" name="page" value="{{#if pagination}}{{pagination.currentPage}}{{else}}1{{/if}}">
    <div class="form-grid">
      <label class="full">
        <span>Title</span>
        <input type="text" name="title" placeholder="Ship a high-quality feature" required>
      </label>
      <label class="full">
        <span>Description</span>
        <textarea name="description" rows="3" placeholder="Add context, deliverables, or acceptance criteria."></textarea>
      </label>
      <label>
        <span>Category</span>
        <select name="category_id">
          <option value="">Unassigned</option>
          {{#each categories}}
            <option value="{{this.id}}">{{this.name}}</option>
          {{/each}}
        </select>
      </label>
      <label>
        <span>Due date</span>
        <input type="date" name="due_date">
      </label>
    </div>
    <div class="form-actions">
      <button type="submit" class="primary">Add task</button>
    </div>
  </form>
</section>
{{else}}
<section class="card muted-card">
  <h3>Ready to be productive?</h3>
  <p>Log in to add, edit, and track your personal tasks.</p>
</section>
{{/if}}
